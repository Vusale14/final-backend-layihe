@model SubCategory
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit SubCategory Data</h1>
        <form asp-action="edit" method="post">
            <div class="form-group">
                <label asp-for="Name">Name*</label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="FAQText">FAQText</label>
                <input class="form-control" asp-for="FAQText">
                <span class="text-danger" asp-validation-for="FAQText"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category*</label>
                <select asp-for="CategoryId">
                    @foreach (var item in ViewBag.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExploreText">ExploreText</label>
                <input class="form-control" asp-for="ExploreText">
                <span class="text-danger" asp-validation-for="ExploreText"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>