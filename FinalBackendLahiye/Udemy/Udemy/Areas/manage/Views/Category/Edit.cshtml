@model Category
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit Category Data</h1>
        <form asp-action="edit" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Name">Name*</label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Type*</label>
                <select asp-for="Type">
                    <option value="Top">Top</option>
                    <option value="Simple">Simple</option>
                </select>
                <span class="text-danger" asp-validation-for="Type"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image">New Image</label>
                <input class="form-control" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            @if (Model.ImageName !=null)
            {
                <div class="form-group">
                    <p>Exist Category Image</p>
                    <img style="border:dotted;" width="300" src="~/uploads/CategoryImages/@Model.ImageName" />
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
        </form>
    </div>
</div>
