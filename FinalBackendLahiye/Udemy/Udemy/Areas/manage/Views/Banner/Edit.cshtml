@model Banner
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit Banner Data</h1>
        <form asp-action="edit" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Title">Title*</label>
                <input class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input class="form-control" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description2">Description2</label>
                <input class="form-control" asp-for="Description2">
                <span class="text-danger" asp-validation-for="Description2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description3">Description3</label>
                <input class="form-control" asp-for="Description3">
                <span class="text-danger" asp-validation-for="Description3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Type*</label>
                <select asp-for="Type">
                    <option value="Home">Home banner</option>
                    <option value="AboutUsHeader">About Us Header banner</option>
                    <option value="AboutUsVideo">About Us Video banner</option>
                </select>
                <span class="text-danger" asp-validation-for="Type"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image">New Image</label>
                <input class="form-control" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            @if (Model.ImageName != null)
            {
                <div class="form-group">
                    <p>Exist Banner Image</p>
                    <img style="border:dotted;" width="300" src="~/uploads/BannerImages/@Model.ImageName" />
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
        </form>
    </div>
</div>

