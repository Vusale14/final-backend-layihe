@model InstructorsReview
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Create Instructor Review Data</h1>
        <form asp-action="create" method="post">
            <div class="form-group">
                <label asp-for="Fullname">Fullname*</label>
                <input class="form-control" asp-for="Fullname">
                <span class="text-danger" asp-validation-for="Fullname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profession">Profession*</label>
                <input class="form-control" asp-for="Profession">
                <span class="text-danger" asp-validation-for="Profession"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review">Review*</label>
                <input class="form-control" asp-for="Review">
                <span class="text-danger" asp-validation-for="Review"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>